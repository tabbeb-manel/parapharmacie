{% extends 'base.html.twig' %}
{% block content %}
    <div class="breadcrumb-wrap">
        <div class="container-fluid">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Connexion</a></li>
            </ul>
        </div>
    </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
<div class="login" style="border-radius: 5px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">

    <form action="{{ path('security_login') }}" method="post">
        <div class="col-lg-8" style="padding-left: 400px">
            <div class="login-form">
                <h2 class="title" style="text-align: center">Connexion</h2>
                <div class="row">

                    <div class="form-group col-md-10" style="padding-left: 50px">
                        <label>E-mail / Pseudo </label><input placeholder="Adresse email..." requied name="_username" value ="{{lastUsername}}"
                                                              type="text" class="form-control">

                    </div>
                    <div class="form-group col-md-10" style="padding-left: 50px">
                        <label>Mot de passe</label><input placeholder="Mot de passe..." requied name="_password"
                                                          type="password" class="form-control">

                    </div>

                    <div class="form-group col-md-10" style="padding-left: 100px">
                        <button type="submit" class="btn btn-success">Connexion</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
    </div>
    </div>
</div>
{% endblock %}
