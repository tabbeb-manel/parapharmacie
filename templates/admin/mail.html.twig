{% extends 'base2.html.twig' %}
{% block content %}
    <section id="main-content" xmlns="http://www.w3.org/1999/html">
        <section class="wrapper">
            <!-- page start-->
            <div class="row mt">
                <div class="col-sm-3">
                    <section class="panel">
                        <div class="panel-body">
                            <a href="mail_compose.html" class="btn btn-compose">
                                <i class="fa fa-pencil"></i>  Compose Mail
                            </a>
                            <ul class="nav nav-pills nav-stacked mail-nav">
                                <li class="active"><a href="{{ path('mailview') }}"> <i class="fa fa-inbox"></i> Inbox </a></li>
                                </li>
                            </ul>
                            <section class="panel">
                                <div class="panel-body">
                                </div>
                            </section>
                        </div>
                    </section>
                </div>
                <div class="col-sm-9">
                    <section class="panel">
                        <header class="panel-heading wht-bg">
                            <h4 class="gen-case">
                                Compose Mail
                            </h4>
                        </header>
                        <form>

                            <div class="panel-body">
                                <div class="compose-btn pull-right">
                                </div>
                                <div class="compose-mail">
                                        <div class="form-group">
                                            <label for="to" class="">To:</label>
                                            <input type="text" tabindex="1" id="to" class="form-control" value="{{ contact.email }}">
                                        </div>
                                        <div class="form-group">
                                            {{ form_row(contactForm.subject, { 'label':'Subject:' }) }}
                                        </div>
                                        <div class="compose-editor">
                                            {{ form_row(contactForm.message) }}
                                        </div>
                                        <div class="compose-btn">
                                            {{ form_row(contactForm.submit, {'attr': {'class':"btn btn-theme btn-sm" } })}}
                                        </div>
                                </div>
                            </div>

                    </form>

                    </section>
                </div>
            </div>
            </div>
        </section>
    </section>

{% endblock %}