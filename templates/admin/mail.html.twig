{% extends 'base2.html.twig' %}
{% block content %}
    <section id="main-content">
        <section class="wrapper">
            <!-- page start-->
            <div class="row mt">
                <div class="col-sm-3">
                    <section class="panel">
                        <div class="panel-body">
                            <a href="mail_compose.html" class="btn btn-compose">
                                <i class="fa fa-pencil"></i>  Compose Mail
                            </a>
                            <ul class="nav nav-pills nav-stacked mail-nav">
                                <li class="active"><a href="{{ path('mailview') }}"> <i class="fa fa-inbox"></i> Inbox </a></li>
                                </li>
                            </ul>
                            <section class="panel">
                                <div class="panel-body">
                                </div>
                            </section>
                        </div>
                    </section>
                </div>
                <div class="col-sm-9">
                    <section class="panel">
                        <header class="panel-heading wht-bg">
                            <h4 class="gen-case">
                                Compose Mail
                                <form action="#" class="pull-right mail-src-position">
                                    <div class="input-append">
                                        <input type="text" class="form-control " placeholder="Search Mail">
                                    </div>
                                </form>
                            </h4>
                        </header>
                        {{ contact.email }}
                        {{ form_start(contactForm) }}

                            <div class="panel-body">
                                <div class="compose-btn pull-right">
                                </div>
                                <div class="compose-mail">
                                        <div class="form-group">
                                            {{ form_row(contactForm.email, { 'label':'To:'})}}

                                        </div>
                                        <div class="form-group">
                                            {{ form_row(contactForm.subject, { 'label':'Subject:' }) }}
                                        </div>
                                        <div class="compose-editor">
                                            {{ form_row(contactForm.message) }}
                                        </div>
                                        <div class="compose-btn">
                                            {{ form_row(contactForm.submit, {'attr': {'class':"btn btn-theme btn-sm" } })}}
                                        </div>
                                </div>
                            </div>

                        {{ form_end(contactForm)}}

                    </section>
                </div>
            </div>
            </div>
        </section>
    </section>

{% endblock %}