{% extends 'base.html.twig' %}

{% block title %}Nos Articles{% endblock %}

{% block content %}

    {% for article in articles %}
        <div class="">
        <div class="review">
        <div class="container-fluid">
            <div class="row align-items-center review-slider normal-slider">
                <div class="row">
                    <div class="review-slider-item">
                        <div class="review-img">
                            <img src="{{ asset('Admin/uploads/images/'~ article.image) }}" alt="image-article">
                        </div>
                        <div class="review-text">
                            <h2>{{ article.title }}</h2>
                            <h3>{{ article.createdAt|date("m/d/Y")  }}</h3>

                            <p>
                                {{ article.description|slice(0,50) }}
                            </p>
                            <a href="{{ path('article_show',{'id':article.id}) }}" ><button class="btn">Lire l'article</button></a>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        </div>
        </div>
    {% endfor %}
    <div class="navigation" style="padding-left: 400px">
        {{ knp_pagination_render(articles) }}

    </div>
{% endblock %}


