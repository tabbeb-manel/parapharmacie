{% extends 'base2.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}

<section id="main-content">
    <section class="wrapper">
        <div class="row" >
            <br>
            <br>
            {% for article in articles %}
            <div class="col-lg-9">

                <div class="card" style="width: 50rem; height: 40rem;">
                    <img class="card-img-top" src="{{ article.image }}" alt="Card image cap" style="width: 100%;
    height: 15vw; object-fit: cover;">
                    <div class="card-body">
                        <h4 class="card-title">{{ article.title }}</h4>
                        <p class="card-text">{{ article.description|slice(0,50) }}...</p>
                        <a href="{{ path('article_edit',{'id':article.id}) }}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>


    </section>
</section>










{% endblock %}
