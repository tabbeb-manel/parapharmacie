{% extends 'base2.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}

<section id="main-content">
    <section class="wrapper">

            <br>
            <br>
            {% for article in articles %}
        <div class="row col-md-5" >
            <div style="padding: 5px">

                <div class="card mb-4">
                    <img class="card-img-top" src="{{ asset('Admin/uploads/images/'~ article.image) }}" alt="Card image cap" style="width: 100%;
    height: 10vw; object-fit: cover;">
                    <div class="card-body">
                        <h4 class="card-title">{{ article.title }}</h4>
                        <p class="card-text">{{ article.description|slice(0,50) }}...</p>
                        <a href="{{ path('article_edit',{'id':article.id}) }}" class="btn btn-primary">Edit</a>
                    </div>
                </div>
            </div>
        </div>
            {% endfor %}


    </section>
    <div class="navigation" style="text-align: center">
        {{ knp_pagination_render(articles) }}

    </div>

</section>










{% endblock %}
