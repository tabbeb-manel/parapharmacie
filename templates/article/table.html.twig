{% extends 'base2.html.twig' %}

{% block title %}Articles{% endblock %}

{% block content %}

<section id="main-content">
    <section class="wrapper">

        <div class="row mt">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <h4><i class="fa fa-angle-right"></i> Table des Articles</h4><a href="{{ path('article_new') }}" ><button class="btn btn-success btn">Ajouter Article</button></a>
                        <hr>
                        <thead>
                        <tr>
                            <th><i class="fa fa-bullhorn"></i> Article</th>
                            <th class="hidden-phone"><i class="fa fa-question-circle"></i> Descrition</th>
                            <th><i class="fa fa-bookmark"></i> Date de Publication</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr {% for ar in articles %}>
                            <td>
                                <a href="basic_table.html#">{{ ar.title }}</a>
                            </td>
                            <td class="hidden-phone">{{ ar.description|slice(0,30) }}...</td>
                            <td>{{ ar.createdAt|date("m/d/Y") }}</td>
                            <td><span class="label label-info label-mini"></span></td>
                            <td>
                                <a href="{{ path('article_edit',{'id':ar.id}) }}" ><button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button></a>
                                <a href="{{ path('article_delete',{'id':ar.id}) }}" ><button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button></a>
                            </td>
                        </tr {% endfor %}>
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </section>
</section>
{% endblock %}