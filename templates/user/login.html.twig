{% extends 'base.html.twig' %}
{% block content %}
    <h1>Connexion !</h1>
<div class="login">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
           {% if error %}
             <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
           {% endif %}
    <form action="{{ path('security_login') }}" method="post">
        <div class="col-lg-12">
            <div class="login-form">
                <div class="row">
                    <div class="col-md-12">
                        <label>E-mail / Pseudo </label>
                        <input placeholder="Adresse email..." requied name="_username" value ="{{lastUsername}}"
                               type="text" class="form-control">
                    </div>
                    <div class="col-md-12">
                        <label>Mot de passe</label>
                        <input placeholder="Mot de passe..." requied name="_password"
                               type="password" class="form-control">
                    </div>
                    <div class="col-md-12">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="newaccount">
                            <label class="custom-control-label" for="newaccount">Keep me signed in</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success" href="{{ path('profile') }}">Connexion</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
    </div>
    </div>
</div>
{% endblock %}
